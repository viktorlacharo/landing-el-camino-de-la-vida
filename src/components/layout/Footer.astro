---
import SocialMedia from "../ui/SocialMedia";
import Container from "./Container.astro";
import { PHONE_NUMBER, EMAIL_ADDRESS, WHATSAPP_URL } from "@/constants";
const year = new Date().getFullYear();
---

<footer class="bg-dark-bg text-white py-16">
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Contact Information -->
      <div>
        <h3 class="text-xl font-display font-semibold mb-4">Contacto</h3>
        <div class="space-y-2">
          <a
            href={WHATSAPP_URL}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center hover:text-golden transition-colors duration-200"
          >
            <svg
              class="w-5 h-5 mr-2 text-golden"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            {PHONE_NUMBER}
          </a>
          <a
            href={`mailto:${EMAIL_ADDRESS}`}
            class="flex items-center hover:text-golden transition-colors duration-200"
          >
            <svg
              class="w-5 h-5 mr-2 text-golden"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            {EMAIL_ADDRESS}
          </a>
          <a
            href="https://maps.app.goo.gl/hTbkT5MhF2n2HJsq7"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-start hover:text-golden transition-colors duration-200"
          >
            <svg
              class="w-5 h-5 mr-2 mt-1 text-golden"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>

            Tarragona, Cataluña <br /> España
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-xl font-display font-semibold mb-4">Navegación</h3>
        <div class="space-y-2">
          <a
            href="#alojamiento"
            class="block hover:text-golden transition-colors duration-200"
            >Alojamiento</a
          >
          <a
            href="#terapias"
            class="block hover:text-golden transition-colors duration-200"
            >Terapias</a
          >
          <a
            href="#packs"
            class="block hover:text-golden transition-colors duration-200"
            >Packs</a
          >
          <a
            href="#talleres"
            class="block hover:text-golden transition-colors duration-200"
            >Talleres</a
          >
          <a
            href="#contacto"
            class="block hover:text-golden transition-colors duration-200"
            >Contacto</a
          >
        </div>
      </div>

      <!-- Brand & Social -->
      <div>
        <h3 class="text-xl font-display font-semibold mb-4">
          El Camino de la Vida
        </h3>
        <p class="text-gray-300 mb-4">
          Transformación espiritual auténtica en espacios sagrados de Tarragona.
        </p>
        <SocialMedia isStatic client:only="react" />
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-700 mt-12 pt-8 text-center text-gray-400">
      <p>&copy; {year} El Camino de la Vida. Todos los derechos reservados.</p>
      <a
        href="https://github.com/viktorlacharo"
        target="_blank"
        class="mt-4 text-sm"
      >
        Desarrollado por <span class="font-medium text-golden"
          >@viktorlacharo</span
        >
      </a>
    </div>
  </Container>
</footer>
