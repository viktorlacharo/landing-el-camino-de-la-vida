---
import { PHONE_NUMBER, EMAIL_ADDRESS, WHATSAPP_URL } from '@/constants';
import Container from '../layout/Container.astro';
---

<section id="contacto" class="py-section bg-gradient-to-br from-lavanda/20 to-golden/10">
  <Container>
    <!-- Section Header -->
    <div class="flex w-full justify-center gap-4 items-center mb-16">
      <div class="size-2 rotate-45 bg-golden"></div>

      <h2 class="text-3xl md:text-4xl p-2 relative">
        <span class="text-golden font-indie -z-10 -rotate-3 -top-8 absolute"
          >Empieza hoy</span
        >
        <span class=" text-dark-bg uppercase tracking-wide">Contacto</span>


      </h2>

      <div class="size-2 rotate-45 bg-golden"></div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div>
          <h3 class="text-subsection font-display font-semibold mb-6">Conecta con Nosotros</h3>
          
          <div class="space-y-4">
            <!-- Phone -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-golden rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-dark-bg mb-1">Teléfono</h4>
                <p class="text-gray-700">{PHONE_NUMBER}</p>
                <p class="text-sm text-gray-600">Disponible de 9:00 a 19:00h</p>
              </div>
            </div>
            
            <!-- Email -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-lavanda rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-dark-bg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-dark-bg mb-1">Email</h4>
                <p class="text-gray-700">{EMAIL_ADDRESS}</p>
                <p class="text-sm text-gray-600">Respuesta en 24h</p>
              </div>
            </div>
            
            <!-- Location -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-menta-ligera rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-dark-bg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-dark-bg mb-1">Ubicación</h4>
                <p class="text-gray-700">Tarragona, Cataluña</p>
                <p class="text-sm text-gray-600">España</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="bg-white/50 backdrop-blur-sm rounded-2xl p-6">
          <h4 class="font-display font-semibold mb-4">Acciones Rápidas</h4>
          <div class="space-y-3">
            <a href={WHATSAPP_URL} target="_blank" rel="noopener noreferrer" class=" flex items-center justify-between p-3 bg-white rounded-lg hover:bg-golden/10 transition-colors duration-200 group">
              <span class="font-medium">WhatsApp</span>
              <svg class="w-5 h-5 text-golden group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <a href={`mailto:${EMAIL_ADDRESS}`} class=" flex items-center justify-between p-3 bg-white rounded-lg hover:bg-lavanda/10 transition-colors duration-200 group">
              <span class="font-medium">Enviar email</span>
              <svg class="w-5 h-5 text-golden group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <a href={`tel:${PHONE_NUMBER}`} class=" flex items-center justify-between p-3 bg-white rounded-lg hover:bg-menta-ligera/10 transition-colors duration-200 group">
              <span class="font-medium">Llamar ahora</span>
              <svg class="w-5 h-5 text-golden group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
  
    </div>
  </Container>
</section>



